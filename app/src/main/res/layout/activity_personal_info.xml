<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.lic.com.insuranceproposalapp.PersonalInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/qualificationlayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qualification"
                    android:layout_centerVertical="true"
                    android:id="@+id/qualificationtext"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="@dimen/text_field_width"
                    android:id="@+id/qualificationedittext"
                    android:layout_toRightOf="@+id/qualificationtext"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/occupationlayout"
                android:layout_below="@+id/qualificationlayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Occupation"
                    android:layout_centerVertical="true"
                    android:id="@+id/occupationtext"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/occupationedittext"
                    android:width="@dimen/text_field_width"
                    android:layout_toRightOf="@+id/occupationtext"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/placeofbirthlayout"
                android:layout_below="@+id/occupationlayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place Of Birth"
                    android:layout_centerVertical="true"
                    android:id="@+id/placeofbirthtext"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeofbirthedittext"
                    android:width="@dimen/text_field_width"
                    android:layout_toRightOf="@+id/placeofbirthtext"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/nameofemployerlayout"
                android:layout_below="@+id/placeofbirthlayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name Of Employer"
                    android:layout_centerVertical="true"
                    android:id="@+id/nameofemployertext"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameofemployeredittext"
                    android:width="@dimen/text_field_width"
                    android:layout_toRightOf="@+id/nameofemployertext"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/servicelayout"
                android:layout_below="@+id/nameofemployerlayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service"
                    android:layout_centerVertical="true"
                    android:id="@+id/servicetext"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/serviceedittext"
                    android:width="@dimen/text_field_width"
                    android:layout_toRightOf="@+id/servicetext"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/incomelayout"
                android:layout_below="@+id/servicelayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Income"
                    android:layout_centerVertical="true"
                    android:id="@+id/incometext"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/incomeedittext"
                    android:width="@dimen/text_field_width"
                    android:layout_toRightOf="@+id/incometext"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/placeofworklayout"
                android:layout_below="@+id/incomelayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PlaceOfWork"
                    android:layout_centerVertical="true"
                    android:id="@+id/placeofworktext"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/placeofworkedittext"
                    android:width="@dimen/text_field_width"
                    android:layout_toRightOf="@+id/placeofworktext"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/identificationmarkslayout"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/placeofworklayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moles"
                    android:layout_centerVertical="true"
                    android:id="@+id/molestextview"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/molesedittext"
                    android:layout_toRightOf="@+id/molestextview">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1."
                        android:width="@dimen/text_field_width"
                        android:id="@+id/moles1" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moles2"
                        android:text="2."
                        android:width="@dimen/text_field_width"
                        android:layout_below="@+id/moles1"/>


                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/physicalparamslayout"
                android:layout_below="@+id/identificationmarkslayout">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/heightlayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Height"
                        android:id="@+id/heighttext"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/heightedittext"
                        android:layout_toRightOf="@+id/heighttext"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/heightlayout"
                    android:id="@+id/weightlayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Weight"
                        android:id="@+id/weighttext"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/weightedittext"
                        android:layout_toRightOf="@+id/weighttext"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/weightlayout"
                    android:id="@+id/chestlayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Chest"
                        android:id="@+id/chesttext"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chestedittext"
                        android:layout_toRightOf="@+id/chesttext"/>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@android:color/background_light"
        android:id="@+id/donepersonalinfo"
        android:background="@android:color/holo_blue_light"
        android:layout_alignBottom="@+id/scrollView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
